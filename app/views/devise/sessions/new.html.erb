          <% resource = User.new %>
          <li>
            <a id="login" class="pseudolink drop" href="#" onclick="$(this).toggleClass('active'); return false"><u>Войти</u></a>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'dropdown' }) do |f| %>
              <div class="white">
                <p>
                  <label>
                    Логин
                    <%= f.email_field :email, placeholder: 'Обязательное поле', required: 'required' %>
                  </label>
                </p>
                <p>
                  <label>
                    Пароль
                    <%= f.password_field :password, placeholder: 'Обязательное поле', required: 'required' %>
                  </label>
                </p>
                <p class="total">
                  <button>Войти</button>
                </p>
              </div>
            <% end %>
          <li><em>или</em>
          <li>
            <a id="register" class="pseudolink drop" href="#" onclick="$(this).toggleClass('active'); return false"><u>Зарегистрироваться</u></a>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'dropdown' }) do |f| %>
              <%= devise_error_messages! %>
              <div class="white">
                <p>
                  <label>
                    Адрес эл. почты
                    <%= f.email_field :email, placeholder: 'Обязательное поле', required: 'required' %>
                  </label>
                </p>
                <p>
                  <label>
                    Пароль
                    <%= f.password_field :password, placeholder: 'Обязательное поле', required: 'required' %>
                  </label>
                </p>
                <p class="total">
                  <button>Зарегистрироваться</button>
                </p>
              </div>
            <% end %>
