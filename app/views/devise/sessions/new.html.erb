<% resource = current_page?(new_manager_session_path) ? Manager.new : User.new; resource_name = resource.class.name.downcase.to_sym %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'dropdown' }) do |f| %>
  <div class="white">
    <p>
      <label>
        Логин
        <%= f.email_field :email, placeholder: 'Обязательное поле', required: 'required' %>
      </label>
    </p>
    <p>
      <label>
        Пароль
        <%= f.password_field :password, placeholder: 'Обязательное поле', required: 'required' %>
      </label>
    </p>
    <!-- p class="forgot text-center small"><%= link_to raw('<u>напомнить пароль</u>'), new_user_password_path, class: 'pseudolink', remote: true %></p -->
    <p class="total">
      <button>Войти</button>
    </p>
  </div>
<% end %>
