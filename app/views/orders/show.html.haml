%p#notice= notice
%p
  %b Name:
  = @order.name
%p
  %b Accepted:
  = @order.accepted
%p
  %b Sender number:
  = @order.sender_number
%p
  %b User:
  = link_to @order.user
- case @order
  - when SingleOrder
    %p
      %b Recipient number:
      = @order.recipient_number
    %p
      %b Text:
      = @order.text
  - when BulkOrder
    %p
      %b Text:
      = @order.text
    %table
      %tr
        %th Number
      - @order.targets.each do |target|
        %tr
          %td= target.recipient_number
  - when IndividualOrder
    %table
      %tr
        %th Number
        %th Text
      - @order.targets.each do |target|
        %tr
          %td= target.recipient_number
          %td= target.text
= link_to 'Back', orders_path
