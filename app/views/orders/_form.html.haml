= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :_type
    %br/
    = select_tag :_type, options_for_select(Order.types, params[:_type])
  - if params[:_type].present?
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :sender_number
      %br/
      = f.text_field :sender_number
    .field
      = f.label :start_at
      %br/
      = f.datetime_select :start_at
    .field
      = f.label :actual_till
      %br/
      = f.datetime_select :actual_till
  .actions
    = f.submit
