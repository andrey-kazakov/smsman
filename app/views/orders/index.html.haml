%h1 Listing orders
%table
  %tr
    %th= link_to 'Created at', orders_path(:order => 'created_at')
    %th Type
    %th Name
    %th= link_to 'Accepted', orders_path(:order => 'accepted')
    %th Sender number
    %th User
    %th
    - if current_user.admin?
      %th
      %th
    %th
    %th
  - @orders.each do |order|
    %tr{ :id => %<order_#{order.id}> }
      %td= order.created_at
      %td= order._type
      %td= link_to order.name, order
      %td.accepted= order.accepted ? 'yes' : 'no'
      %td= order.sender_number
      %td= link_to order.user
      - if current_user.admin?
        %td= link_to 'Accept', accept_order_path(order), remote: true
        %td= link_to 'Decline', accept_order_path(order), remote: true, method: :delete
      %td= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete
      %td= link_to 'Show', order
%br/
- unless @user and @user == current_user
  = link_to 'New Order', new_order_path
