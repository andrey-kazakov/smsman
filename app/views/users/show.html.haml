.page-header
  %h1 User profile
= form_for @user do |f|
  %fieldset
    .clearfix
      = f.label :first_name
      .input= f.text_field :first_name
    .clearfix
      = f.label :last_name
      .input= f.text_field :last_name
    .clearfix
      = f.label :company_name
      .input= f.text_field :company_name
    .clearfix
      = f.label :phone_number
      .input= f.text_field :phone_number
    .clearfix
      = f.label :referral
      .input= f.text_field :referral
  .actions
    = f.submit :class => 'btn primary'
- if current_user.admin
  = render :file => Rails.root+'app/views/orders/index.html.haml'
